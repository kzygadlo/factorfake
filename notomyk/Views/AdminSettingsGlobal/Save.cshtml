@model notomyk.Models.AppSettingsGlobal

@Html.Partial("~/Views/Admin/Index.cshtml")

<div class="col-xs-12 defaultContainer">
    <div class="col-xs-12 removePadding adminContainer">

        <h2>Setting</h2>

        @using (Html.BeginForm("Save", "AdminSettingsGlobal", FormMethod.Post))
        {
            if (Model != null && Model.ID != 0)
            {
                @Html.HiddenFor(a => a.ID)
            }

            <div class="form-group">
                <label>Nazwa</label>
                @Html.TextBoxFor(a => a.Key, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Key)
            </div>
            <div class="form-group">
                <label>Wartosc</label>
                @Html.DropDownListFor(a => a.Value, new[] { new SelectListItem { Text = "true", Value = "true" }, new SelectListItem { Text = "false", Value = "false" } }, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Value)
            </div>
            <div class="form-group">
                <label>Description</label>
                @Html.TextBoxFor(a => a.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Description)
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Save</button>
                @Html.ActionLink("Cancel", "Index", "AdminSettingsGlobal", null, new { @class = "btn btn-danger btn-large" })
            </div>
        }
    </div>
</div>

