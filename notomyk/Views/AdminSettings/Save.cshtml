@model notomyk.Models.AppSettings

@Html.Partial("~/Views/Admin/Index.cshtml")

<div class="col-xs-12 defaultContainer">
    <div class="col-xs-12 removePadding adminContainer">

            <h2>Setting</h2>

            @using (Html.BeginForm("Save", "AdminSettings", FormMethod.Post))
            {
                if (Model != null && Model.ID != 0)
                {
                    @Html.HiddenFor(a => a.ID)
                }

                <div class="form-group">
                    <label>@Model.Key</label>
                    @Html.TextBoxFor(a => a.Value, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.Value)
                </div>
                <div class="form-group">
                    <label>Description</label>
                    @Html.TextBoxFor(a => a.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.Description)
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Save</button>
                    @Html.ActionLink("Cancel", "Index", "AdminSettings", null, new { @class = "btn btn-danger btn-large" })
                </div>
            }
        </div>
</div>
