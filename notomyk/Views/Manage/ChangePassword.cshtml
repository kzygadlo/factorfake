@model notomyk.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Zmień hasło";
}

<div class="col-xs-12 defaultContainer removePadding">
    <div class="col-xs-12">
        <div class="main-login main-center">

            @if (User.Identity.GetUserName() != null)
            {
                var imgUrl = Url.Content(AppConfig.UserLogoLink(User.Identity.GetUserId()));
                <img class="profile-img img-circle" src="@imgUrl" alt="" height="250" width="250">
            }

            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Obecne hasło" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Nowe hasło" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Powtórz nowe hasło" })
                        </div>
                    </div>
                </div>

                <div class="form-group ">
                    <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Zmień hasło</button>
                </div>
            }
        </div>
    </div>
</div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
