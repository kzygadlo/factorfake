@using notomyk.Infrastructure
@using notomyk.Models
@using System.Globalization;

<input class="currentPage" type="hidden" name="currentPageName" value=0>

<script id="newsPattern" type="text/template">
    <li id="{{newsID}}">
        <a href="{{urlActionLink}}">
            <div class="event-list">
                <img alt="img" src="{{newspaperPictureLink}}" class="hidden-xs" />
                <img id="newsPicture" alt="" src="{{newsPictureLink}}"  />
                <div class="info">
                    <div class="col-xs-12 removePadding" >
                        <div class="col-sm-10 col-xs-9 hidden-xs" style="height: 46px; padding-top:10px">
                            <strong><span class="text p2lines">{{newsTitle}}</span></strong>
                        </div>
                        <div class="col-sm-10 col-xs-9 visible-xs" style="height: 46px; padding:5px 0 0 8px">
                            <strong><span class="text p2lines">{{newsTitle}}</span></strong>
                        </div>
                        <div class="col-sm-2 col-xs-3 visible-xs" style="height: 46px; padding:5px 5px 0 0; text-align:right;">
                            <div class="visible-xs">
                                <img src="{{newspaperPictureLink}}" class="avatar img-circle" width="40" height="40" alt="">
                            </div>
                        </div>  
                        <div class="col-sm-2 col-xs-3 hidden-xs" style="height: 46px; padding:5px 0 0 0; text-align:right;">

                            <span id="FakeTag" class="ui red tag label hidden-xs" style="font-size:11px; "></span>
                            <span id="FaktTag" class="ui green tag label hidden-xs" style="font-size:11px"></span>
                        </div>                        
                            
                        </div>
                        <div class="col-xs-12 hidden-xs" style="height: 46px;">
                            <p class="">
                                <span class="text p2lines">{{newsDescription}}</span>
                            </p>
                        </div>
                        <div class="col-xs-12 visible-xs" style="height: 46px; padding-left:8px">
                            <p class="">
                                <span class="text p2lines">{{newsDescription}}</span>
                            </p>
                        </div>
                        <div class="col-xs-12 removePadding" style="height: 28px;">
                            <div id="hashtag2" class="col-sm-5 hidden-xs">
                                <span class="tag label label-info">#Polityka</span>
                                <span class="tag label label-info">#Finanse</span>
                                <span class="tag label label-info">#PIS</span>

                            </div>
                            <div class="col-sm-7 col-xs-12 removePadding detailsIcon" style="text-align:right;padding-right: 3px;">

                                <span class="ui label hidden-xs">
                                    <i class="desktop icon"></i>
                                    {{numberOfVisitors}}
                                </span>
                                <span class="ui label hidden-xs">
                                    <i class="comments outline icon"></i>
                                    {{numberOfComments}}
                                </span>
                                <span class="ui label">
                                    <i class="wait icon"></i>
                                    {{dateAdded}}
                                </span>
                                <span class="ui  basic label">
                                    <i class="thumbs outline green up icon"></i>
                                    {{faktTag}}
                                </span>
                                <span class="ui  basic label">
                                    <i class="thumbs outline red down icon"></i>
                                    {{fakeTag}}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </li>
</script>

<div class="event-list-main col-xs-12 removePadding">
    <ul id="newsContainer"></ul>
    <div id="loadingImage" class="ui segment" style="width:100%; margin-bottom:10px; border:none; box-shadow:none">
        <div class="ui active inverted dimmer">
            <div class="ui medium text loader">Wczytywanie</div>
        </div>
        <p></p>
    </div>
    <input type="button" id="newPageButton" class="addNewPage col-xs-12" hidden="hidden" value="" data-id="0" />
    <button onclick="topFunction()" id="myBtn" title="Go to top"><span class="glyphicon glyphicon-chevron-up"></span></button>
</div>











