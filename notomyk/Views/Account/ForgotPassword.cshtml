<div class="col-xs-12 defaultContainer">
    <div class="col-xs-12">

        <div class="main-login main-center">
            <img class="profile-img" src="@Url.FOFiconLight()" alt="">
            @*<img class="profile-img" src="~/Images/Utility/loginLogo.png" alt="">*@

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Podaj Email" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group" style="margin-top:10px">
                    <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Resetuj hasło</button>
                </div>
            }

        </div>
        <p class="addAccountLink">
            @Html.ActionLink("Logowanie", "Login")
        </p>
        <p class="addAccountLink">
            @Html.ActionLink("Załóż konto", "Register")
        </p>
        <br />
    </div>
</div>


















