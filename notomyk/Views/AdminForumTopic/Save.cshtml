@model notomyk.Models.ForumTopic

@Html.Partial("~/Views/Admin/Index.cshtml")

<div class="col-xs-12 defaultContainer">
    <div class="col-xs-12 removePadding adminContainer">

        @using (Html.BeginForm("Save", "AdminForumTopic", FormMethod.Post))
        {
            if (Model != null && Model.ID != 0)
            {
                @Html.HiddenFor(a => a.ID)
            }

            <div class="form-group">
                <label>Tytuł</label>
                @Html.TextBoxFor(a => a.Subject, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Subject)
            </div>

            <div class="form-group">
                <label>Aktywny</label>
                @Html.TextBoxFor(a => a.IsActive, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.IsActive)
            </div>

            <div class="form-group">
                <label>Widoczny na stronie glownej.</label>
                @Html.DropDownListFor(a => a.OnMainPage, new[] { new SelectListItem { Text = "", Value = "" }, new SelectListItem { Text = "1", Value = "1" }, new SelectListItem { Text = "2", Value = "2" }, new SelectListItem { Text = "3", Value = "3" }, new SelectListItem { Text = "4", Value = "4" }, new SelectListItem { Text = "5", Value = "5" } }, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.OnMainPage)
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                @Html.ActionLink("Cancel", "Index", "AdminForumTopic", null, new { @class = "btn btn-danger btn-large" })
            </div>
        }
    </div>
</div>



